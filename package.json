{
  "name": "ttrpg-ts",
  "version": "0.6.1",
  "private": false,
  "author": "Alex Jarvis",
  "description": "A collection of utilities for playing several popular TTRPGs - powered by randsum-ts",
  "license": "MIT",
  "homepage": "https://github.com/RANDSUM/ttrpg-ts",
  "keywords": [
    "blades in the dark",
    "bitd",
    "5e",
    "d&d 5e",
    "dungeons and dragons",
    "salvage union rpg",
    "mech rpg",
    "root rpg",
    "root",
    "dice",
    "d20",
    "dice roller",
    "rpg dice roller",
    "roll",
    "d&d",
    "dnd",
    "rpg",
    "ttrpg",
    "rpgs",
    "ttrpgs",
    "tabletop",
    "dungeons",
    "dragons",
    "roleplaying game",
    "rand",
    "random",
    "RNG",
    "notation",
    "typescript",
    "bun"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "source": "./src/index.ts",
  "files": [
    "./dist/index.js",
    "./dist/index.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/RANDSUM/randsum-ts.git"
  },
  "sideEffects": false,
  "scripts": {
    "analyze": "size-limit",
    "build": "bun run clean && bun run build.ts",
    "clean": "rm -rf ./dist/",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format:fix": "prettier . --write",
    "format": "prettier . --check",
    "gen:docs": "typedoc ./src/index.ts",
    "ts:check": "tsc --noEmit",
    "prepublish": "bun run build",
    "postversion": "git push --no-verify && git push --tags --no-verify"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "4 KB"
    }
  ],
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "@size-limit/preset-small-lib": "^11.1.5",
    "@types/eslint__js": "^8.42.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^5.62.0",
    "bun-plugin-dts": "^0.2.3",
    "bun-types": "latest",
    "eslint": "^9.11.1",
    "prettier": "^3.3.3",
    "randsum": "^7.1.0",
    "size-limit": "^11.1.5",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.7.0",
    "typedoc": "^0.26.7"
  },
  "type": "module",
  "dependencies": {}
}
